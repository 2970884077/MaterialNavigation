<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionBarStyle">@style/AppTheme.MyActionBar</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/AppTheme.MyActionBar</item>
        <item name="popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:popupMenuStyle" tools:targetApi="11">@style/MyPopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
    </style>

    <style name="AppTheme.MyActionBar">
        <item name="background">@color/primary</item>
        <item name="android:background">@color/primary</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <item name="android:titleTextStyle" tools:targetApi="11">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/AppTheme.ActionBar.SubTitleText</item>
        <item name="android:subtitleTextStyle" tools:targetApi="11">@style/AppTheme.ActionBar.SubTitleText</item>
        <item name="android:actionBarTabTextStyle" tools:targetApi="11">@style/AppTheme.ActionBar.TabTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.ActionBar.SubTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.ActionBar.TabTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="MyPopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow" tools:targetApi="11">
        <item name="android:popupBackground">@color/primary_light</item>
    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/primary_light</item>
    </style>
</resources>

